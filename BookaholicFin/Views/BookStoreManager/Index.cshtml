@model IEnumerable<BookaholicFin.Models.Book>

@{
    ViewBag.Title = "Index";
}

<div style="padding-top:70px;padding-left:28px;">
<p class="btn btn-default" style="margin-bottom:10px">
    @Html.ActionLink("Create New", "Create")
</p>
    <br/>
<table class="table table-responsive table-bordered" style="vertical-align:text-bottom">
    <tr>
        <th>
            Genre
        </th>
        <th>
            Author
        </th>
        <th>
            Title
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>           
                <p class="btn btn-default" style="float:left">@Html.ActionLink("Details", "Details", new { id = item.BookId }) </p>
                <p class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.BookId }) </p>
            </td>
        </tr>
    }

</table>
</div>